<div>
    @foreach (var image in Model.Images)
     {
        <div class="showImageCard">
            <div>
                <h2 class="showLabel">@Html.ActionLink(image.ImageName, "Show/" + image.ImageID, "Image")</h2>
            </div>
            <div class="showImageContainer">
                <a href="@Url.Action("Show/" + image.ImageID, "Image")">
                    <img id="logo" src="~/ImageUploads/images/@Url.Content(image.ImagePath)" class="showImage" />
                </a>
            </div>

            <div class="showLink">
                <a href="@Url.Action("Show/" + image.ImageID, "Image")" class="fas fa-eye" title="View"></a>
                <a href="@Url.Action("Edit/" + image.ImageID, "Image")" class="fas fa-edit" title="Edit"></a>
                <a href="@Url.Action("Delete/" + image.ImageID, "Image")" class="fas fa-trash" title="Delete"></a>
            </div>

        </div>
     }
</div>

