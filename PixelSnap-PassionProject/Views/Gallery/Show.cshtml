@model PixelSnap_PassionProject.Models.Gallery
@{
    ViewBag.Title = "Show";
}


<div class="headerContainer">
    <h1>@Model.GalleryName</h1>
    <br />
    <div>@Html.Raw(Model.GalleryDescription)</div>
    <br/>
    <div class="date">
        <span>Category: @Model.GalleryCatergory</span>
        <br/>
        <span>Date Created: @Model.DateCreated</span>
    </div>
    <br />
</div>
<div class="createMethod">
    <span class="actionLink">@Html.ActionLink("Back to Gallery Lists", "List", "Gallery")</span>
    <span class="actionLink">@Html.ActionLink("Edit Gallery", "Edit/" + Model.GalleryID)</span>
    <span class="actionLink">@Html.ActionLink("Delete Gallery", "Delete/" + Model.GalleryID)</span>
</div>

<div class="createMethod">
    @Html.ActionLink("Add More Images!", "Create/", "Image")
</div>
